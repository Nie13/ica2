    /= f.label :emergency_addr, t(".eaddr"),class: 'col-sm-6'
    /.col-sm-6
      /= f.text_field :emergency_addr, class: 'form-control', required: true

  /.form-group
    /= f.label :emergency_phone, t(".ephone"),class: 'col-sm-6'
    /.col-sm-6
      /= f.text_field :emergency_phone, class: 'form-control', required: true

  /.form-group
    /= f.label :emergency_relation, t(".erel"),class: 'col-sm-6'
    /.col-sm-6
      /= f.text_field :emergency_relation, class: 'form-control', required: true

  /.form-group
    /= f.label :referral, t(".add_info"),class: 'col-sm-6'
    /.col-sm-6
      /= f.select :referral, [t(".relation"), 'cityspade.com',t('.newmedia3'),'Columbia University CSSA', t(".newmedia1"), t(".newmedia2"), t(".other")], {prompt: t(".select")}, {class: 'form-control'}
      //= f.select :referral, ['Friend','cityspade.com','NYU CSSA BBS','Columbia University CSSA','Dealmoon/Weibo','WeChat','Other'], {prompt: "Please select an option"}, {class: 'form-control'}

  .form-group
    = f.label :sicknesses, "照顾疾病（初级）", class: 'col-sm-6'
    - sicknesses = Settings.account_details["l1_sicks"]
    .col-sm-6
      /-(1..7).each do |x|
      - for suckness in sicknesses
        .options
          = f.check_box :sicknesses, {multiple: true}, suckness, false
          span = suckness
          /span =(".opt#{x}")

  .form-group
    = f.label :sicknesses, "照顾疾病（中级）", class: 'col-sm-6'
    - sicknesses = Settings.account_details["l2_sicks"]
    .col-sm-6
      - for suckness in sicknesses
        .options
          = f.check_box :sicknesses, {multiple: true}, suckness, false
          span = suckness

  .form-group
    = f.label :sicknesses, "照顾疾病（高级）", class: 'col-sm-6'
    - sicknesses = Settings.account_details["l3_sicks"]
    .col-sm-6
      - for suckness in sicknesses
        .options
          = f.check_box :sicknesses, {multiple: true}, suckness, false
          span = suckness

  .form-group
    = f.label :helps, "基本技能", class: 'col-sm-6'
    - helps = Settings.account_details["basic_helps"]
    .col-sm-6
      - for holp in helps
        .options
          = f.check_box :helps, {multiple: true}, holp, false
          span = holp

  .form-group
    = f.label :helps, "进阶技能", class: 'col-sm-6'
    - helps = Settings.account_details["adv_helps"]
    .col-sm-6
      - for holp in helps
        .options
          = f.check_box :helps, {multiple: true}, holp, false
          span = holp

  .submit-btn
    /= submit_tag t(".submit"), class: "btn btn-default"
    = f.button t(".continue"), id: "next-btn", type: "button", class: "btn btn-default"
