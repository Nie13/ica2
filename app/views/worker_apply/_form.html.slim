      = f.text_field :dob, class: 'form-control date-format', placeholder: "mm/dd/yyyy", required: true

  .form-group
    = f.label :phone, "电话", class: 'col-sm-6'
    .col-sm-6
      = f.text_field :phone, class: 'form-control', required: true

  .form-group
    = f.label :email, "邮箱", class: 'col-sm-6'
    .col-sm-6
      = f.text_field :email,class: 'form-control', required: true

  .form-group
    = f.label :start_date, "开始从业服务时间", class: 'col-sm-6'
    .col-sm-6
      = f.text_field :start_date, class: 'form-control date-format', placeholder: "mm/dd/yyyy", required: true

  .form-group
