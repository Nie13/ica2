.form-selection.row#work-option
  h3
    | 申请表
  /.col-xs-6.col-sm-4.col-md-offset-2.student
    /= f.radio_button :is_employed, false, id: "student"
    /label for="student" = t ".student"
  /.col-xs-6.col-sm-4.col-md-offset-1.employed
    /= f.radio_button :is_employed, true, id: "employed"
    /label for="employed" = t ".employed"

#client-fields
  h3
    | 基本信息

  .form-group
    = f.label :last_name, "姓", class: 'col-sm-6'
    .col-sm-6
      = f.text_field :last_name, class: 'form-control', required: true

  .form-group
    = f.label :first_name, "名", class: 'col-sm-6'
    .col-sm-6
      = f.text_field :first_name, class: 'form-control', required: true

  .form-group
    = f.label :dob, "出生日期", class: 'col-sm-6'
